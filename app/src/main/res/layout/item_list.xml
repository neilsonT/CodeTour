<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/markerS"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_title"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/marker">

    </androidx.appcompat.widget.AppCompatImageView>
    <TextView
        android:id="@+id/item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/item_address"
        app:layout_constraintLeft_toRightOf="@id/markerS"
        app:layout_constraintRight_toRightOf="parent"

        android:text="노량진역"
        android:textStyle="bold"
        android:textColor="#F27405"
        android:textSize="10pt"
        />

    <TextView
        android:id="@+id/item_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/item_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="45dp"
        android:text="서울 동작구 노량진동"
        android:textColor="#F2BF27"
        android:textSize="8pt"/>

</androidx.constraintlayout.widget.ConstraintLayout>